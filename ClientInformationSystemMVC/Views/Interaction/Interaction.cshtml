@model ApplicationCore.Models.InteractionPageViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Interactions</h1>
    <ul class="list-group list-group-flush">
        @foreach (var inter in Model.interaction)
        {
            <li class="list-group-item">
                <i style="font-size: x-large;">Employee: @inter.EmpName</i>
                <br />
                <i style="font-size: x-large;">Client: @inter.ClientName</i>
                <br />
                <i>Remarks: @inter.Remarks</i>
                <br />
            </li>
        }
    </ul>
</div>